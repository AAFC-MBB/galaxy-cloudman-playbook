#!/bin/sh

### BEGIN INIT INFO
# Provides:        galaxy
# Required-Start:
# Required-Stop:
# Default-Start:   2 3 4 5
# Default-Stop:    0 1 6
# Short-Description: Start Galaxy daemon
### END INIT INFO

PATH=/sbin:/bin:/usr/sbin:/usr/bin
PSQL_USER=postgres
GALAXY_USER={{ galaxy_user_name }}
GALAXY_HOME={{ galaxy_server_dir }}
PIDFILE={{ galaxy_server_dir }}/main.pid
LOGFILE={{ galaxy_server_dir }}/main.log

. /lib/lsb/init-functions

case $1 in
        start)
                log_daemon_msg "Starting PostgreSQL" "Galaxy"
                su - $PSQL_USER /bin/sh -c "{{ postgresql_bin_dir }}/pg_ctl -D {{ galaxyFS_base_dir }}/db -w -l /var/log/postgresql/pg_galaxy.log start"
                log_daemon_msg "Starting Galaxy" "Galaxy"
                su - $GALAXY_USER /bin/sh -c "$GALAXY_HOME/run.sh --pid-file=$PIDFILE --log-file $LOGFILE  --daemon"
                status=$?
                log_end_msg $status
                ;;
        stop)
                log_daemon_msg "Stopping Galaxy" "Galaxy"
                su - $GALAXY_USER /bin/sh -c "$GALAXY_HOME/run.sh --pid-file=$PIDFILE --stop-daemon"
                log_end_msg $?
                rm -f $PIDFILE
                log_daemon_msg "Stopping PostgreSQL" "Galaxy"
                su - $PSQL_USER /bin/sh -c "{{ postgresql_bin_dir }}/pg_ctl -D {{ galaxyFS_base_dir }}/db stop"
                log_end_msg $?
                ;;
        restart|force-reload)
                $0 stop && sleep 2 && $0 start
                ;;
        try-restart)
                if $0 status >/dev/null; then
                        $0 restart
                else
                        exit 0
                fi
                ;;
        reload)
                exit 3
                ;;
        *)
                echo "Usage: $0 {start|stop|restart|try-restart|force-reload}"
                exit 2
                ;;
esac
